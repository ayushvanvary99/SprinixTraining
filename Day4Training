###########   Reverse Array by not using inverted Loop  ####################### 




$arr =  array(1, 2, 4, 5 ,7,8);

$n=count($arr);
// reverse array without using reverse loop , same array




for($i=0; $i<count($arr);$i++)
{
    
  echo$arr[$i].",";
}

echo"\n\n";




