<?php
/******************************************************************************
 
###################3 Associative array ############################

*******************************************************************************/

$Detail = array(
    
    "name" => "Ayush",
    "age" => 23,
    "email" => "ayush.vanvary@gmail.com",
    "hobbies" => array("reading", "music", "sports")
);
    
  
//Loop through using for each 


foreach ($Detail as list( "name" => $n , "age" => $n1, "email" => $n2, "hobbies" => $n3)){
    
    echo $n." ".$n1." ".$n2." ".$n3;
}

